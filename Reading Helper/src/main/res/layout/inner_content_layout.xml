<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bookThumbnail"
        android:layout_width="@dimen/card_thumbnail_width"
        android:layout_height="@dimen/card_thumbnail_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- Use same ID to use built-in features -->
    <TextView
        android:layout_toRightOf="@id/bookThumbnail"
        android:id="@+id/book_description"
        android:layout_marginLeft="4dp"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="6dp" />

    <RatingBar
        android:id="@+id/main_inner_ratingBar"
        style="@style/main_inner_ratingbar"
        android:numStars="5"
        android:stepSize=".5"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_below="@+id/book_description"
        android:layout_toRightOf="@+id/bookThumbnail"
        android:paddingTop="2dp"/>

</RelativeLayout>

